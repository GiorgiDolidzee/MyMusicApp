<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272727">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="35dp"
            android:text="მოგესალმებით"
            android:fontFamily="@font/bpg"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/musicappTextView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/hello"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:elevation="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcomeTextView"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/sfregular"
            android:text="არტისტები"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@+id/musicappTextView" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@+id/textView">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/eminemImageButton"
                    android:layout_width="140dp"
                    android:layout_height="160dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/eminemframe"
                    android:elevation="10dp"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/twopacImageButton"
                    android:layout_width="140dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/twopacframe"
                    android:elevation="20dp"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/eminemPhotoss"
                    android:layout_width="140dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/drakeframe"
                    android:elevation="15dp"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/eminemPhotosss"
                    android:layout_width="140dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lilwayneframe"
                    android:scaleType="centerCrop" />


            </LinearLayout>


        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sfcompact"
            android:text="პოპულარული"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:id="@+id/eminemLoveYourself"
                android:layout_width="380.5dp"
                android:layout_height="68.5dp"
                android:layout_gravity="center"
                android:layout_marginStart="22dp"
                android:background="@drawable/loseyourself" />

            <ImageButton
                android:id="@+id/lilwayneDropTheWorld"
                android:layout_width="380.5dp"
                android:layout_height="68.5dp"
                android:layout_gravity="center"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/droptheworld" />

            <ImageButton
                android:id="@+id/twopacAllEyez"
                android:layout_width="380.5dp"
                android:layout_height="68.5dp"
                android:layout_gravity="center"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/alleyezonme" />

            <ImageButton
                android:id="@+id/tygaTaste"
                android:layout_width="380.5dp"
                android:layout_height="68.5dp"
                android:layout_gravity="center"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/taste" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="790dp"
            android:fontFamily="@font/sfcompact"
            android:text="(C) 2020 ყველა უფლება დაცულია"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="900dp"
            android:fontFamily="@font/sfcompact"
            android:text="-"
            android:textColor="#2B2B2B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>